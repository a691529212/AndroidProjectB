<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="vampire.com.androidprojectb">

    <uses-permission android:name="android.permission.INTERNET" />

    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:name=".base.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

       <activity android:name=".activity.NewsDetailActivity"/>
        <activity android:name=".activity.EnterActivity"/>
        <activity android:name=".activity.SettiingActivity"/>
        <activity android:name=".fragment.user.radio.RadioCollectActivity"/>
        <activity android:name=".fragment.user.radio.RadioCommentActivity"/>
        <activity android:name=".fragment.user.radio.RadioGoldActivity"/>
        <activity android:name=".fragment.user.radio.RadioReadActivity"/>
        <activity android:name=".activity.FindTopicActivity"/>

        <activity android:name=".fragment.news.activity.NewsSearchAcitvity" />
        <activity android:name=".fragment.news.tantan.TanTanAcitivity" />
        <activity android:name=".fragment.news.activity.TabLayoutTitleActivity" />
        <activity android:name=".fragment.news.activity.NewsDetailActivity" />
        <activity android:name=".fragment.user.EnterActivity" />
        <activity android:name=".fragment.user.SettiingActivity" />
        <activity android:name=".fragment.user.RadioCollectActivity" />
        <activity android:name=".fragment.user.RadioCommentActivity" />
        <activity android:name=".fragment.user.RadioGoldActivity" />
        <activity android:name=".fragment.user.RadioReadActivity" />

    </application>

</manifest>