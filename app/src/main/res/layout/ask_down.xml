<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="300dp"

    android:layout_marginLeft="12dp"
    android:layout_marginTop="15dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:padding="3dp"


        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_head_pic_url"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:background="@null"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"

            fresco:roundedCornerRadius="100dp"

            fresco:roundingBorderWidth="1dp" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_head_pic_url"
            android:text="123" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_pic_url"
            android:layout_width="362dp"
            android:layout_height="180dp"
            android:layout_below="@id/image_head_pic_url"

            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/text_alias"
            android:layout_width="360dp"
            android:layout_height="38dp"
            android:layout_below="@id/image_pic_url"
            android:text="789" />

        <TextView
            android:id="@+id/text_classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_alias"
            android:text="军事" />

        <TextView
            android:id="@+id/text_question_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="268dp"
            android:layout_toRightOf="@id/text_classification"
            android:text="00" />

        <TextView
            android:id="@+id/text_ti_wen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="268dp"
            android:layout_toRightOf="@id/text_question_counts"
            android:text="提问" />

        <TextView

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="272dp"
            android:layout_toRightOf="@id/text_classification"
            android:background="@drawable/focus_border"
            android:text=" + 关注 "

            android:textColor="@android:color/white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>