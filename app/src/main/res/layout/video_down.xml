<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" 
        android:layout_width="match_parent"

    android:layout_height="210dp">
<com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/drawee_view_image"
    android:layout_width="match_parent"
    android:layout_height="200dp"
   android:layout_marginTop="10dp"
    android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/text_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="15dp"
        android:text="456"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="153dp"
        android:layout_marginLeft="15dp"
        android:background="@mipmap/a5x"/>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_toRightOf="@id/image"
       android:layout_marginTop="151dp"
       android:layout_marginLeft="10dp"
       android:background="@drawable/participation_border"
       android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_user_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textColor="@android:color/white"
        android:text="789"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_user_count"

        android:textColor="@android:color/white"
        android:text="参与"/>
   </RelativeLayout>
</RelativeLayout>