<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#EB413D">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/rb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="25sp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="350dp"
        android:layout_below="@id/ll"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:background="@drawable/ll_border"
        android:layout_height="150dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="75dp"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="12dp"
               android:background="@mipmap/a8c"/>
           <EditText
               android:layout_width="280dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:hint="请输入账号"/>


       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/a8b"/>
            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:password="true"
                android:hint="密码"/>


        </LinearLayout>



    </LinearLayout>
    <TextView
        android:id="@+id/text_enter"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/ll_border"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/ll_one"
        android:gravity="center"
        android:text="登 录"/>
    <TextView
        android:id="@+id/text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_enter"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="请您注册登录"/>
    <TextView
        android:id="@+id/text_down"
        android:layout_below="@id/text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:text="还可以通过以下方式登录"/>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_below="@id/text_down"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ll_border"
        android:layout_marginTop="10dp"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/zw"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:text="微信账号登录"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/zu"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="28dp"
            android:text="微信账号登录"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/zs"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="28dp"
            android:text="微信账号登录"/>








    </LinearLayout>
</RelativeLayout>