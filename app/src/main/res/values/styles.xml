<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BannerDefaultStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">2000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#44aaaaaa</item>
        <!-- 指示点选中时的背景 -->
        <item name="banner_pointFocusedImg">@drawable/banner_shape_point_select</item>
        <!-- 指示点未选中时的背景 -->
        <item name="banner_pointUnfocusedImg">@drawable/banner_shape_point_normal</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示点的位置 -->
        <item name="banner_pointGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">2000</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">4sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
    </style>

    <style name="MainBtn" parent="AutoWrap">
        <item name="android:onClick">onClick</item>
        <!--<item name="android:background">@drawable/select_btn</item>-->
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="AutoWrap">


        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
